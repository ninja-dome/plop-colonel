{
  "name": "@nicolasey/plop-colonel",
  "version": "0.0.1",
  "description": "plop generator for NestJS Colonel boilerplate",
  "main": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "author": "Nicolas Seynaeve <nicolas.sey@gmail.com> (@nicolasey)",
  "license": "MIT",
  "repository": "https://github.com/nicolasey/plop-colonel",
  "keywords": [
    "nestjs",
    "typescript",
    "plop",
    "plop-pack",
    "plop-generator",
    "prisma",
    "service",
    "controller",
    "module"
  ],
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "tsc --watch",
    "build": "tsc",
    "postbuild": "cp -r src/templates dist/templates",
    "pretest": "npm run lint && tsc --noEmit",
    "format": "prettier --loglevel warn --write \"**/*.{ts,tsx,css,md,json}\"",
    "posttest": "npm run format",
    "prepare": "husky install",
    "prepublishOnly": "rimraf dist && run-s build",
    "lint": "eslint . --cache --fix --ext .ts,.tsx"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.6.0",
    "@typescript-eslint/parser": "^5.6.0",
    "eslint": "^8.4.1",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.2",
    "npm-run-all2": "^5.0.0",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.5.3"
  },
  "lint-staged": {
    "*.{ts,tsx,css,md,json,js}": "prettier --write"
  },
  "dependencies": {
    "node-plop": "^0.30.0"
  },
  "volta": {
    "node": "16.13.1",
    "yarn": "1.22.17"
  },
  "publishConfig": {
    "access": "public"
  }
}
